<p id="notice"><%%= notice %></p>
<%%= link_to '<i class="mdi mdi-plus-box-outline"></i> Add <%= singular_table_name.titleize %>'.html_safe, new_<%= singular_table_name %>_path, class: 'btn btn-primary btn-sm' %>
<table class="table">
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
      <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <% if attribute.name == 'name' or attribute.name == 'title' %>
        <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %> %></td>
        <% else %>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end %>
      <% end -%>
        <td><%%= link_to '<i class="mdi mdi-pencil fa-fw"></i>'.html_safe, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <td><%%= link_to '<i class="mdi mdi-delete fa-fw"></i>'.html_safe, <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<br>
